{
  "name": "adhan",
  "version": "4.3.2",
  "description": "High precision Islamic prayer time library",
  "main": "main.js",
  "scripts": {
    "build": "pika-pack build",
    "publish": "pika-pack publish",
    "test": "npm-run-all test:*",
    "test:lint": "eslint src/ test/",
    "test:unit": "jest",
    "test:audit": "npm audit --production --audit-level=high",
    "test-watch": "jest --watch",
    "coverage": "codecov",
    "commit": "cz",
    "prepare": "husky install"
  },
  "@pika/pack": {
    "pipeline": [
      [
        "@pika/plugin-standard-pkg",
        {
          "exclude": [
            "**/*.test.ts"
          ]
        }
      ],
      [
        "@pika/plugin-build-node"
      ],
      [
        "@pika/plugin-build-web"
      ],
      [
        "@pika/plugin-build-types"
      ]
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/batoulapps/adhan-js.git"
  },
  "homepage": "https://github.com/batoulapps/adhan-js",
  "keywords": [
    "adhan",
    "islam",
    "muslim",
    "prayer",
    "islamic",
    "prayer times",
    "salah",
    "salat",
    "salaat",
    "namaz"
  ],
  "author": "Ameir Al-Zoubi <ameir@ameir.com>",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^12.0.1",
    "@commitlint/config-conventional": "^12.0.1",
    "@pika/pack": "^0.5.0",
    "@pika/plugin-build-node": "^0.9.2",
    "@pika/plugin-build-types": "^0.9.2",
    "@pika/plugin-build-web": "^0.9.2",
    "@pika/plugin-standard-pkg": "^0.9.2",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "@types/jest": "^27.4.1",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "codecov": "^3.6.5",
    "commitizen": "^4.2.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.32.0",
    "eslint-plugin-jest": "^24.1.5",
    "husky": "^5.1.2",
    "jest": "^27.5.1",
    "moment": "^2.24.0",
    "moment-timezone": "^0.5.28",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.1",
    "semantic-release": "^17.4.0",
    "ts-jest": "^27.1.3",
    "typescript": "~4.5.5",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
